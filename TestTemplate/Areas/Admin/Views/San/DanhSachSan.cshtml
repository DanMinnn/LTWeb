                @{
                    string mdm = item.MaDanhMuc;
                    var dm = db.DanhMucSans.FirstOrDefault(c => c.MaDanhMuc == maDanhMuc);
                    if (danhMuc != null)
                    {
                        @dm.LoaiSan

                    }
                }
            </td>


            <td>
            </td>
        </tr>
    }
</table>
<div class="dlink">
    @Html.PagedListPager(Model, page => Url.Action("DanhSachSan", new { page = page }))
</div>