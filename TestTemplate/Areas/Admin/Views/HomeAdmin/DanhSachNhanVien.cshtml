@model IEnumerable<TestTemplate.Models.NhanVien>
@using System.Globalization;

@{
    ViewBag.Title = "DanhSachNhanVien";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Danh sách nhân viên</h2>


<table class="table">
    <tr>
        <th>
            <label class="control-label col-md-10 ">Họ tên</label>
        </th>
        <th>
            <label class="control-label col-md-13 ">Ngày sinh</label>
        </th>
        <th>
            <label class="control-label col-md-13 ">Giới tính</label>
        </th>
        <th>
            <label class="control-label col-md-13 ">Số điện thoại</label>
        </th>
        <th>
            <label class="control-label col-md-10 ">Email</label>
        </th>
        <th>
            <label class="control-label col-md-10 ">CCCD</label>
        </th>
        <th>
            <label class="control-label col-md-10 ">Tên cơ sở</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @{
                    DateTime dt = DateTime.ParseExact(item.NgaySinh.ToString(), "dd/MM/yyyy hh:mm:ss",CultureInfo.InvariantCulture);
                    string s = dt.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture);
                    @Html.DisplayFor(modelItem => s)
                }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CCCD)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.C.tencs)
            </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaNV }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaNV }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaNV })
            </td>
        </tr>
    }

</table>
