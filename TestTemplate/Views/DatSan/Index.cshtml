@model TestTemplate.Models.DatSan

@{
    ViewBag.Title = "Đặt sân";
    Layout = "~/Views/Shared/LayoutDatSan.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div style="margin: 100px 0px">
        <div class="container">
            <div class="form-horizontal">
                <h4>Đặt sân</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2 " style="margin-top: 10px">Họ tên</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.hoTen, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.hoTen, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" style="margin-top: 10px">Email</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", placeholder = "Điền email (nếu có)" } })
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" style="margin-top: 10px">Số điện thoại</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.soDienThoai, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                        @Html.ValidationMessageFor(model => model.soDienThoai, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" style="margin-top: 10px">Số sân</label>
                    <div class="col-md-10">
                        <select name="SoSan" class="form-control">
                            <option value="So 1">Sân số 1 </option>
                            <option value="So 2">Sân số 2 </option>
                            <option value="So 3">Sân số 3 </option>
                            <option value="So 4">Sân số 4 </option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" style="margin-top: 10px">Giờ bắt đầu</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.gioBatDau, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "datetime-local"})
                        @Html.ValidationMessageFor(model => model.gioBatDau, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" style="margin-top: 10px">Giờ kết thúc</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.gioKetThuc, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "datetime-local" })
                        @Html.ValidationMessageFor(model => model.gioKetThuc, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10" style="margin-top: 20px">
                        <input type="submit" value="Đặt sân" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

